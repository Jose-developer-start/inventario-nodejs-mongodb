<div class="container">
    <div class="row pt-1 mt-1 mr-1">
        <form action="/productos/new" method="POST" class="container pt-1 mt-3 mr-1">

            <div class="row form-group justify-content-center text-center">
                <div class="form-row formulario">
                    <div class="col-12 card-header mb-2">
                        <h1>Agregar producto</h1>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input name="nombre" type="text" class="form-control" placeholder="Nombre" 
                                value="{{nombre}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="descripcion" type="text" class="form-control" placeholder="Descripción"
                                value="{{descripcion}}">
                        </div>
                        <div class="form-group">
                            <input name="modelo" type="text" class="form-control" placeholder="Modelo"
                                value="{{modelo}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="precio" type="number" class="form-control" placeholder="Precio (1,10)" step="0.01"
                                value="{{precio}}">
                        </div>
                        <div class="form-group">
                            <input name="imagen" type="text" class="form-control" placeholder="imagen"
                                value="{{imagen}}">
                        </div>
                        <div class="form-group">
                            <input name="nombre_prov" type="text" class="form-control" placeholder="Nombre del proveedor"
                                value="{{nombre_prov}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input name="direccion_prov" type="text" class="form-control" placeholder="Dirección del proveedor" 
                                value="{{direccion_prov}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="email_prov" type="email" class="form-control" placeholder="email del proveedor"
                                value="{{email_prov}}">
                        </div>
                        <div class="form-group">
                            <input name="telefono_prov" type="tel" class="form-control" placeholder="Telefono del proveedor" minlength="8" maxlength="8"
                                value="{{telefono_prov}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="nombre_cat" type="text" class="form-control" placeholder="Nombre categoria"
                                value="{{nombre_cat}}">
                        </div>
                        <div class="form-group">
                            <input name="descripcion_cat" type="text" class="form-control" placeholder="Descripción categoria"
                                value="{{descripcion_cat}}">
                        </div>
                        <div class="form-group">
                            <input name="imagen_cat" type="text" class="form-control" placeholder="Imagen categoria"
                                value="{{imagen_cat}}">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                </div>
            </div>
        </form>
    </div>
</div>